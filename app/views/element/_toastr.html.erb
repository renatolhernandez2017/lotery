<% unless flash.empty? %>
  <script type="text/javascript">
    toastr.options = {
      "closeButton":        true,
      "debug":              false,
      "newestOnTop":        true,
      "progressBar":        false,
      "positionClass":      "toast-top-right",
      "preventDuplicates":  false,
      "showDuration":       "0",
      "hideDuration":       "1000",
      "timeOut":            "5000",
      "extendedTimeOut":    "1000",
      "showEasing":         "swing",
      "hideEasing":         "linear",
      "showMethod":         "fadeIn",
      "hideMethod":         "fadeOut"
    };

    <% flash.each do |f| %>
      <% type = f[0].to_s.gsub("alert", "error").gsub("notice", "info") %>
      toastr['<%= type %>']('<%= f[1] %>');
    <% end %>
  </script>
<% end %>
